extends layout

block content
  h1= title
  h2 All questions
  ul
   each question, i in questions
    li= question.message

  h2 Your message
  form(method="post", action="/addquestion")
   input(type="radio", name="soort", value="question")
   label(for="question") Question
   input(type="radio", name="soort", value="answer")
   label(for="answer") Answer
   br
   textarea(placeholder="message", name="message")
   br
   button(type="submit") Post message